<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:gravity="bottom"
    android:padding="16dp"
    android:background="@color/azul_background">
    
    <ImageView
        android:id="@+id/imgPerfilDrawer"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/icon_perfil_user"/>
    <TextView
        android:id="@+id/textViewUsernameDrawer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jorge Luis Dominguez Chavez"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="16dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delegado General"
        android:textColor="@color/white"
        android:textSize="14dp"
        />



</LinearLayout>